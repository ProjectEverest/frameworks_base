<resources>
    <!-- Pixel navbar -->
    <style name="DotStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:alpha">@null</item>
    </style>

    <!-- Data usage -->
    <style name="TextAppearance.QS.Status.DataUsage">
        <item name="android:textColor">?attr/onSurfaceVariant</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>

    <!-- Tri-state UI -->
    <style name="qs_theme" parent="Theme.SystemUI.QuickSettings">
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- Island notification -->
    <style name="Theme.Island.SystemUI" parent="@style/Theme.MaterialComponents.DayNight">
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>

    <style name="islandBackgroundOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">48dp</item>
    </style>
</resources>
